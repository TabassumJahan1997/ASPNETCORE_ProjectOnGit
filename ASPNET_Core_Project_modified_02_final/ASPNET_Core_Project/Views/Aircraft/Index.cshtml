@model IEnumerable<ASPNET_Core_Project.Models.Aircraft>

@{
    ViewData["Title"] = "Index";
}

<div class="alert alert-primary justify-content-center">
    <h1 class="text-center">All Aircraft Information</h1>
    <a asp-action="Create" class="justify-content-center btn btn-primary">Create New</a>
</div>

<div class="card-body col-8 m-auto">
    <table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
               @* @Html.DisplayNameFor(model => model.ImagePath)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                    <img src="@item.ImagePath" width="100" height="100" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AircraftId" class="btn btn-outline-info">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.AircraftId" class="btn btn-outline-secondary">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.AircraftId" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<div class="card-footer alert alert-primary d-flex justify-content-end">
    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>
