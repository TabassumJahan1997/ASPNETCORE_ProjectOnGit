@model ASPNET_Core_Project.Models.SoldierImageEntryVM

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-6 m-auto">
        <div class="card">
            <div class="card-header alert alert-primary">
                <h3 class="text-center">@Model.RankName @Model.SoldierName</h3>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-center">
                    <img src="@Model.ImagePath" width="100" height="130"/>
                </div>
                <div class="d-flex justify-content-center">
                    <dl class="row m-auto">
                    <dt class = "col-sm-4">
                        @Html.DisplayNameFor(model => model.SoldierName)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.SoldierName)
                    </dd>
                    <dt class = "col-sm-4">
                        @Html.DisplayNameFor(model => model.Age)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.Age)
                    </dd>
                    <dt class = "col-sm-4">
                        @Html.DisplayNameFor(model => model.Rank)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.RankName)
                    </dd>
                </dl>
                 
                </div>
                <div class="d-flex justify-content-lg-start">
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.SoldierId">Edit</a>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-end">
                 <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
            </div>
        </div>
    </div>
</div>

