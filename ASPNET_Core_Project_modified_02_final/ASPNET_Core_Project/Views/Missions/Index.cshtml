@model IEnumerable<ASPNET_Core_Project.Models.Mission>

@{
    ViewData["Title"] = "Index";
}


<div class="alert alert-primary justify-content-center">
    <h1 class="text-center">All Mission Information</h1>
    <a asp-action="Create" class="justify-content-center btn btn-primary">Create New</a>
</div>

@foreach (var item in Model)
{
    <div class="card mb-2">
        <div class="card-header d-flex justify-content-between">
            <img src="@item.ImagePath" width="70" height="80"/>
            <div>
                <a asp-action="Edit" asp-route-id="@item.MissionId" class="btn btn-outline-info">Edit</a>
                <a asp-action="Details" asp-route-id="@item.MissionId" class="btn btn-outline-warning">Details</a>
                <a asp-action="Delete" asp-route-id="@item.MissionId" class="btn btn-outline-danger">Delete</a>
            </div>
        </div>
        <div class="card-body row d-flex justify-content-center">
            <div class="col-4">
                <table class="table table-bordered table-sm">
                    <tbody>
                        <tr>
                            <th>Location</th>
                            <td>@item.Location</td>
                        </tr>
                        <tr>
                            <th>Budget</th>
                            <td>@item.Budget</td>
                        </tr>
                        <tr>
                            <th>Start Date</th>
                            <td>@item.StartDate</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>@item.Description</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-6">
                <table class="table table-bordered table-sm">
                <thead>
                    <tr>
                        <th>Soldier ID</th>
                        <th></th>
                        <th>Soldier Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in item.MissionSoldierEntries)
                    {
                        <tr>
                            <td>@record.SoldierId</td>
                            <td><img src="@record.Soldier.SoldierImage.ImagePath" width="40" height="40"/></td>
                            <td>@record.Soldier.SoldierName</td>
@*                            <td>@record.Soldier.Age</td>
                            <td>@record.Soldier.RankId</td>*@
                            <td>
                                <a asp-action="Details" asp-controller="Soldiers" asp-route-id="@record.SoldierId" class="btn btn-outline-warning">Details</a>
                                @*<a asp-action="Delete" asp-controller="Mission" asp-route-id="@record.SoldierId" class="btn btn-outline-danger">Delete</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
}



